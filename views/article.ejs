        <h1 class="mb-4"><%= article.title %></h1>
        
        <div class="text-muted mb-2">
            <%= article.author %> &#8226; <%= article.date.toLocaleDateString() %> 
            &#8226; <a href="/articles/edit/<%= article.id %>">Edit Article</a>
        </div>
