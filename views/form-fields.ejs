<!-- template for form fields designed to be used in other views, i.e. a "partial view" -->
<!-- this specific partial view is used in new-article.ejs -->

<div class="form-group mb-4">
    <label for="title">Title</label>
    <input required type="text" name="title" id="title" class="form-control mt-2" value="<%= article.title %>">
</div>

<div class="form-group mb-4">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control mt-2"><%= article.description %></textarea>
</div>

<div class="form-group mb-4">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control mt-2"><%= article.markdown %></textarea>
</div>

<button type="submit" class="btn btn-primary">Save</button>
<a href="/" class="btn btn-secondary">Cancel</a>
